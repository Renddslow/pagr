{
  "name": "pagr",
  "version": "0.1.0",
  "private": false,
  "description": "A tiny pagination range creator.",
  "repository": "https://github.com/Renddslow/pagr",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "dist/index.js",
  "scripts": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "concurrency": 4,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m"
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/node": "^14.6.4",
    "ava": "^3.12.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
